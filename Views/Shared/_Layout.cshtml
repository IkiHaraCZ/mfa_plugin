        </div>
    </div>
</div>

<script>
    (function(){
      function hasJq(){ return !!(window.jQuery && typeof window.jQuery.fn.modal === 'function'); }
      async function openMfaWizard(){
          var host = document.getElementById('mfaWizardBody');
          if (!host) return;

          // otevři modal
          if (hasJq()) window.jQuery('#mfaWizardModal').modal('show');
          else {
              var m = document.getElementById('mfaWizardModal');
              if (m){ m.style.display='block'; m.classList.add('show'); document.body.classList.add('modal-open'); }
              if (!document.getElementById('mfaW-backdrop')){
                var bd = document.createElement('div'); bd.id='mfaW-backdrop'; bd.className='modal-backdrop fade show'; document.body.appendChild(bd);
              }
          }

          // načti view
          host.innerHTML = '<div class="text-muted">@L.GetResource("MFA_Nacitani")</div>';
          try{
              var res = await fetch('/Dvoufaktor/Wizard', { headers:{ 'Accept':'text/html'}});
              host.innerHTML = res.ok ? (await res.text()) : '<div class="text-danger">@L.GetResource("MFA_Err_Nacteni")</div>';
          }catch{
              host.innerHTML = '<div class="text-danger">@L.GetResource("MFA_Err_Sit")</div>';
          }
      }
      window.MFAW_open = openMfaWizard;
    })();
</script>

